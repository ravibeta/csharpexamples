@model IEnumerable<DogOwner.Models.Dog>

@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>

        </div>
    </section>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="wrap">
    @foreach (var item in Model) {
      <div class="box">
    <div class="boxInner">
      <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" />
      <div class="titleBox">@Html.DisplayNameFor(model => model.Name)</div>
    </div>
  </div>
    }
</div>
